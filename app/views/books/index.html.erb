<head></head>
<body>
  <h1>Books</h1>
  <table>
   <thead>
     <tr>
      <th>title</th>
      <th>body</th>
     </tr>
   </thead>
      <tbody>
       <% @books.each do |book| %>
         <tr>
          <td class="title"><%= book.title %></td>
          <td class="body"><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td>
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %>
          </td>
         </tr>
       <% end %>
   </tbody>
  </table>
<h2>New book</h2>
 <div cless="formbox">

    <%= form_for(@book) do |f| %>
     <div class ="error-box">
      <% if @book.errors.any? %>
         <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
      <% end %>
     <% end %>
     </div>
    <p>Title</p>
    <%= f.text_field :title %>

    <p>Body</p>
    <%= f.text_area :body %>
    <p><%= f.submit 'Create Book' %></p>

 </div>
　　<% end %>
</body>